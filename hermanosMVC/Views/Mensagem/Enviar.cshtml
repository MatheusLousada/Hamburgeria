@model Mensagem
@{
    ViewData["Title"] = "Fale Conosco";
}

<form method="POST" asp-action="Enviar" style="margin-top: 60px; height:550px">

    <div class="form-group">
        <label asp-for="Nome">Nome:</label>
        <input asp-for="Nome"  class="form-control" placeholder="Digite o seu nome" required>
    </div>

    <div class="form-group">
        <label asp-for="Email">Email:</label>
        <input  asp-for="Email" class="form-control" placeholder="Digite o seu e-mail" required>
    </div>

    <div class="form-group">
        <label asp-for="Texto">Mensagem:</label>
        <input type="text" asp-for="Texto" class="form-control" placeholder="Digite uma mensagem" required>
    </div>

    <div style="margin-left: 500px; margin-top: 60px">
        <input type="submit" value="Enviar" class="btn btn-warning btn-lg">
    </div>
    

</form> 

<p>
    @ViewBag.Mensagem
</p>